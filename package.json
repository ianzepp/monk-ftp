{
  "name": "monk-ftp",
  "version": "1.1.0",
  "description": "FTP Protocol Server for monk-api integration - Bridge between FTP protocol and HTTP API",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "monk-ftp": "./bin/monk-ftp"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "compile": "tsc",
    "spec": "scripts/spec.sh",
    "spec:ts": "scripts/spec-ts.sh",
    "spec:sh": "scripts/spec-sh.sh",
    "test": "npm run spec",
    "test:all": "npm run spec:sh",
    "test:one": "npm run spec:sh",
    "spec:all": "npm run spec:ts",
    "spec:one": "npm run spec:ts",
    "start:api": "tsx spec/helpers/fake-monk-api.ts",
    "start:api:fs": "tsx spec/helpers/filesystem-fake-api.ts",
    "dev": "scripts/dev.sh",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "preversion": "npm run compile && npm run spec",
    "postversion": "git push && git push --tags && gh release create v$npm_package_version --generate-notes"
  },
  "keywords": [
    "ftp",
    "protocol",
    "server",
    "typescript",
    "monk-api"
  ],
  "author": "Ian Zepp",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}